    "version": "0.2.0",
    "configurations": [
        {
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "name": "Launch Bot",
            "request": "launch",
            "runtimeArgs": [
                "--inspect",
                "index.js"
            ],
            "runtimeExecutable": "nodemon",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "cwd": "${workspaceFolder}/instance"
        }
    ]
}